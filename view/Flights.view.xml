<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.bf.newtrial.view.Flights"
    xmlns="sap.m">

    <Page
        id="idPageFlights"
        binding="{Flights}"
        showNavButton="{device>/isPhone}"
        navButtonPress="handleNavButtonPress"
        title="Flights">
        <Table
            items="{Flights}">
            <ColumnListItem>
                <cells>
                    <Text
                        text="{
                            path: 'Fldate',
                            formatter: 'com.bf.newtrial.util.Formatter.date'
                        }" />
                    <Text text="{Planetype}" />
                    <Text text="{Connid}" />
                    <ObjectNumber
                        visible="{device>/isPhone}"
                        number="{
                            parts: [
                                { path: 'Seatsocc' },
                                { path: 'Seatsmax' }
                            ],
                            formatter: 'com.bf.newtrial.util.Formatter.capacityPercent'
                        }"
                        state="{
                            parts: [
                                { path: 'Seatsocc' },
                                { path: 'Seatsmax' }
                            ],
                            formatter: 'com.bf.newtrial.util.Formatter.capacityState'
                        }" />
                    <ProgressIndicator
                        visible="{device>/isNotPhone}"
                        percentValue="{
                            parts: [
                                { path: 'Seatsocc' },
                                { path: 'Seatsmax' }
                            ],
                            formatter: 'com.bf.newtrial.util.Formatter.capacityPercent'
                        }"
                        displayValue="{Seatsocc} / {Seatsmax}"
                        state="{
                            parts: [
                                { path: 'Seatsocc' },
                                { path: 'Seatsmax' }
                            ],
                            formatter: 'com.bf.newtrial.util.Formatter.capacityState'
                        }" />
                    <Text text="{
                        path: 'Paymentsum',
                        type: 'sap.ui.model.type.Float'
                        }" />
                </cells>
            </ColumnListItem>
            <columns>
                <Column
                    vAlign="Middle">
                    <header>
                        <Label text="Date" />
                    </header>
                </Column>
                <Column
                    vAlign="Middle">
                    <header>
                        <Label text="Aircraft Type" />
                    </header>
                </Column>
                <Column
                    vAlign="Middle">
                    <header>
                        <Label text="Connection" />
                    </header>
                </Column>
                <Column
                    visible="{device>/isPhone}"
                    hAlign="End"
                    vAlign="Middle">
                    <header>
                        <Label text="Capacity (%)" />
                    </header>
                </Column>
                <Column
                    visible="{device>/isNotPhone}"
                    hAlign="End"
                    vAlign="Middle">
                    <header>
                        <Label text="Capacity (Occ/Max)" />
                    </header>
                </Column>
                <Column
                    hAlign="End"
                    vAlign="Middle">
                    <header>
                        <Label text="Payments ({Currcode})" />
                    </header>
                </Column>
            </columns>
        </Table>
    </Page>

</mvc:View>
